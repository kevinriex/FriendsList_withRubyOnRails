<div class="jumbotron" id="<%= dom_id @friend %>">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">    
    <strong>Email:</strong>
    <%= @friend.email %> |
    <strong>Phone:</strong>
    <%= @friend.phone %> |
    <strong>Insta:</strong>
    @<%= @friend.insta %>
  </p>
    <hr class="my-4">
    </br>
  <div>
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= button_to "Delete", @friend, method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-dark" %>
</div>
</div>