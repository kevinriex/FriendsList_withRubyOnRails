<% if user_signed_in? %>
</br></br></br>
<div id="friends">
<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
<tr>
<th>Name</th>
<th>Email</th>
<th>Phone</th>
<th>Insta</th>
<th>User ID</th>
<th colspan="2"></th>
</tr>
</thead>
<tbody>
  <% @friends.each do |friend| %>
  
  <% if friend.user == current_user %>
    <%= render friend %>
    <td>
      <%= button_to "Edit", edit_friend_path(friend), class:"btn btn-secondary" %>
    </td>
    <td>
      <%= button_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-danger" %>
    </td>
    </tr>
  <% end %>
  <% end %>
  </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Hello, World!</h1>

<% end %>
